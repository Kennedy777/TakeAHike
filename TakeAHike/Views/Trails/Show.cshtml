
@{
  Layout = "_Layout";
}
@using TakeAHike.Models;
@using TakeAHike;
<body>

  <h1>Take A Hike!</h1>
  <div class="container">
    <div class="box">
    <h2>Hike the @Model.GetName()</h2>

    <h4>Location: @Model.GetLocation()</h4>
    <h4>Difficulty: Level @Model.GetDifficulty()</h4>
      @if(@Model.GetSummits() == 2)
      {
        <p> There are two total view points</p>
      }
      @if(@Model.GetSummits() == 3)
      {
        <p>There are three or more view points</p>
      }
      <h4>Features & Scenery of the @Model.GetName() hike: </h4>

      <ul>
          @if(@Model.GetSummits() == 1)
          {
            <li>@Model.GetName() has a summit</li>
          }
        @if(@Model.GetWaterfalls() == true)
        {
          <li>@Model.GetName() contains a beautiful waterfall</li>
        }
         @if(@Model.GetStreams() == true)
        {
          <li>@Model.GetName() has a lovely stream</li>
        }
        @if(Model.GetMountainViews() == true)
        {
          <li>@Model.GetName() has many majestic mountain views</li>
        }
        @if(@Model.GetLakes() == true)
        {
          <li>@Model.GetName() is along a lake.</li>
        }

      </ul>


    </div>
  </div>
</body>
