@{
  Layout = "_Layout";
}
@using TakeAHike.Models;
@using TakeAHike;

<div class="container body-content">
  <div class="box">
    <div class="title-bar">
      <h4>View Profile</h4>
    </div>

    @if (Model.Count == 0)
    {
      <p>You do not have a profile saved</p>
    }
    @if(Model.Count != 0)
    {
      <table>
        <tr>
          <th>Name</th>
          <th>Phone Number</th>
        </tr>
      @foreach (User user in Model)
      {
        <tr>
          <td><a href='/users/@user.GetId()'>@user.GetFirstName() @user.GetLastName()</a></td>
          <td>@user.GetPhone()</td>
        </tr>
      }
      </table>
    }
    <nav class="bottom">
      <a href='/users/new'>Add a stylist</a>
      <a href=''>Delete All</a>
    </nav>
  </div>
</div>
