<!DOCTYPE html>
@{
  Layout="Shared/_Layout.cshtml";
}
@if(Model.ContainsKey("message"))
{
  <h3>@Model["message"]</h3>
}
<div class="container">
  <div class="row">

  <h2>Hiker Login:</h2><br>
  <div class="sign-in col-md-6">
  <form action="/sign-in" method="post">
    <h2>Sign-In</h2>
    <label for="user-name">Username</label>
    <input class="form-control" type="text" name="user-name">
    <label for="user-password">Password</label>
    <input class="form-control" type="password" name="user-password">
    <br>
    <button class="btn" type="submit">Login</button>
  </form>
</div>
<div class="sign-in col-md-6">
  <form action="/sign-up" method="post">
    <h2>New to Take a Hike? Start by creating an account:</h2>
    <label for="new-user-name">Username:</label>
    <input class="form-control" type="text" name="new-user-name">
    <label for="new-user-password">New Password:</label>
    <input class="form-control" type="password" name="new-user-password">
    <br>
    <button class="btn" type="submit">Let's get hiking!</button>
  </form>
</div>
</div>
</div>
